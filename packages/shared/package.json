{
  "name": "@cv-generator/shared",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "author": {
    "name": "giak",
    "url": "https://github.com/giak"
  },
  "description": "Shared types and utilities for CV Generator",
  "homepage": "https://github.com/giak/cv-generator/tree/main/packages/shared#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/giak/cv-generator",
    "directory": "packages/shared"
  },
  "bugs": {
    "url": "https://github.com/giak/cv-generator/issues"
  },
  "keywords": [
    "cv",
    "resume",
    "types",
    "typescript"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./src/types/*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/types/*.js"
    },
    "./src/validators/*": {
      "types": "./dist/validators/*.d.ts",
      "import": "./dist/validators/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "typescript": "~5.7.3",
    "vitest": "^1.2.2"
  }
}
