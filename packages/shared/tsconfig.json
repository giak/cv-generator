{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@cv-generator/core": ["../core/src"],
      "@cv-generator/core/*": ["../core/src/*"],
      "@cv-generator/infrastructure": ["../infrastructure/src"],
      "@cv-generator/infrastructure/*": ["../infrastructure/src/*"],
      "@cv-generator/ui": ["../ui/src"],
      "@cv-generator/ui/*": ["../ui/src/*"]
    },
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
} 