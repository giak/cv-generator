// Main content area - Keep for now as it might be referenced in other components
.dashboard-content {
  @apply flex-1 p-4 pt-14 md:pt-4 overflow-y-auto;
  min-height: calc(100vh - 56px);
  
  @screen md {
    min-height: 100vh;
  }
}

