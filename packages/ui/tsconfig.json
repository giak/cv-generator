{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@modules/*": ["src/modules/*"],
      "@shared/*": ["src/shared/*"],
      "@test/*": ["src/test/*"],
      "@cv/*": ["src/modules/cv/*"],
      "@components/*": ["src/core/components/*"],
      "@composables/*": ["src/core/composables/*"],
      "@utils/*": ["src/core/utils/*"],
      "@assets/*": ["src/assets/*"],
      
      "@cv-generator/shared": ["../shared/src"],
      "@cv-generator/shared/*": ["../shared/src/*"],
      "@cv-generator/core": ["../core/src"],
      "@cv-generator/core/*": ["../core/src/*"],
      "@cv-generator/infrastructure": ["../infrastructure/src"],
      "@cv-generator/infrastructure/*": ["../infrastructure/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/types/@cv-generator-shared.d.ts.old"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
} 